@model List<Competition_Tournament.Models.Competition>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div id="cnt">
        <div id="cntr">
            <h3>All Competitions:</h3>
            @for (int i = 0; i < Model.Count; i++)
            {
                var competition = Model[i];
                string winner = "";
                //identificam castigatorul
                
                if(competition.CompetitionType == 1)
                {
                    Dictionary<string, int?> q = new Dictionary<string, int?>();
                    foreach (var game in competition.Games)
                    {
                        if (game.Team1Score != null && game.Team2Score != null)
                        {
                            if (!q.ContainsKey(game.Team1Name))
                                q.Add(game.Team1Name, 0);
                            if (!q.ContainsKey(game.Team2Name))
                                q.Add(game.Team2Name, 0);
                            if (game.Team1Score == game.Team2Score)
                            {
                                q[game.Team1Name] += 1;
                                q[game.Team2Name] += 1;
                            }
                            else if (game.Team1Score > game.Team2Score)
                            {
                                q[game.Team1Name] += 3;
                            }
                            else
                            {
                                q[game.Team2Name] += 3;
                            }
                        }
                    }

                    var sortedDict = from entry in q
                                     orderby entry.Value descending
                                     select entry;
                    foreach(var win in sortedDict)
                    {
                        winner = win.Key;
                        break;
                    }
                }
                else
                {
                    Dictionary<string, int?> q = new Dictionary<string, int?>();

                    foreach (var game in competition.Games)
                    {
                        if (game.Team1Score != null && game.Team2Score != null)
                        {
                            if (!q.ContainsKey(game.Team1Name))
                                q.Add(game.Team1Name, 0);
                            if (!q.ContainsKey(game.Team2Name))
                                q.Add(game.Team2Name, 0);

                            if (game.Team1Score < game.Team2Score)
                            {
                                q[game.Team1Name] += 1;
                            }
                            else
                            {
                                q[game.Team2Name] += 1;
                            }
                        }
                    }

                    var sortedDict = from entry in q
                                     orderby entry.Value ascending
                                     select entry;

                    foreach(var win in sortedDict)
                    {
                        winner = win.Key;
                        break;
                    }
                }
                
                //am identificat castigatorul

                <div class = "cmp-cnt">
                    <h4>Competition @(i + 1): @competition.Name</h4>
                    @if (winner.Length > 0)
                    {
                        <p>Winner: @winner</p>
                    }
                    else
                    {
                        <p>Winner: Unknown</p>
                    }
                    <p>Start: @competition.StartDate?.ToString("dd/MM/yyyy")</p>
                    <p>End: @competition.EndDate?.ToString("dd/MM/yyyy")</p>
                    <p>Location: @competition.Location </p>
                    <p>Type: @competition.CompetitionTypeNavigation.Name</p>
                    <a href="@Url.Action("Details", "Competitions", new { id = competition.Id })">Details</a>
                    <h6>Games played:</h6>
                    @if (competition.Games.Count > 0)
                    {
                        @foreach (var game in competition.Games)
                        {
                            <p>@game.Team1Name - @game.Team2Name (@game.Team1Score - @game.Team2Score)</p>
                        }
                    }
                    else{
                        <p>No games</p>
                    }
                    <a asp-controller="Competitions" asp-action="Leaderboard" asp-route-id="@competition.Id">Leaderboard</a>
                </div>
            }
        </div>
    </div>
</div>
